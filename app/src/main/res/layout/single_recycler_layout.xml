<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="1dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="1dp"
    android:padding="8dp"
    app:cardCornerRadius="8dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



            <ImageView
                android:id="@+id/thumbnail_imageview"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:src="@drawable/empty_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



        <TextView
            android:id="@+id/newsTitle_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="3dp"
            android:layout_toEndOf="@id/thumbnail_imageview"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_medium"
            android:maxLines="3"
            android:text="Hii this is the head line"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/newsFrom_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/newsTitle_textview"
            android:layout_marginStart="3dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@id/thumbnail_imageview"
            android:fontFamily="@font/poppins_light"
            android:maxLines="1"
            android:text="this is the source"
            android:textSize="12sp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>